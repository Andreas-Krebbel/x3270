# Makefile for pr3287

RM = rm -f
CC = @CC@

all: pr3287

prefix = @prefix@
exec_prefix = @exec_prefix@
datarootdir = @datarootdir@
MANDIR = @mandir@
BINDIR = @bindir@
sysconfdir = @sysconfdir@

CCOPTIONS = @CCOPTIONS@
XCPPFLAGS = @CPPFLAGS@ @XANSI@ @XPRECOMP@ -I. -I../include
CFLAGS = $(CCOPTIONS) $(CDEBUGFLAGS) $(XCPPFLAGS) \
	-DLIBX3270DIR=\"@LIBX3270DIR@\"
LDFLAGS = @LDFLAGS@
LIBS = @LIBS@
INSTALL = @INSTALL@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
INSTALL_DATA = @INSTALL_DATA@

OBJ = o
include pr3287_files.mk
SRCS = $(PR3287_SOURCES)
OBJECTS = $(PR3287_OBJECTS)
LIB32XX = ../lib/lib32xx.a

XVERSION = xversion.c
version.o: version.txt mkversion.sh
	$(RM) $(XVERSION)
	@chmod +x mkversion.sh version.txt
	sh ./mkversion.sh pr3287 >$(XVERSION)
	$(CC) $(CFLAGS) -c -o $@ $(XVERSION)
	$(RM) $(XVERSION)

pr3287: $(OBJECTS) version.o $(LIB32XX)
	$(CC) -o $@ $(OBJECTS) version.o $(LDFLAGS) $(LIBS) -L../lib -l32xx

$(LIB32XX):
	cd ../lib/32xx && $(MAKE)

install: pr3287
	[ -d $(DESTDIR)$(BINDIR) ] || \
		mkdir -p $(DESTDIR)$(BINDIR)
	$(INSTALL_PROGRAM) pr3287 $(DESTDIR)$(BINDIR)/pr3287

install.man:
	[ -d $(DESTDIR)$(MANDIR)/man1 ] || \
		mkdir -p $(DESTDIR)$(MANDIR)/man1
	$(INSTALL_DATA) pr3287.man $(DESTDIR)$(MANDIR)/man1/pr3287.1

clean:
	$(RM) *.o
clobber: clean
	$(RM) pr3287
depend:
	@MAKEDEP@ -- $(CFLAGS) -- -s "# DO NOT DELETE" $(SRCS)

